@model SalesFiguresAPI.Models.GeneralPageViewModel

@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

<h2>Todays Merret Sales:</h2>
@foreach (var site in Model.TodaysTotalSales)
{
    @Html.DisplayFor( m => site);
}

<h2>Last Years Sales:</h2>
<p>@Model.LastYearsSales</p>

<p>This is where the things will add</p>
<div id="messagesTable">

</div>

@section Scripts
{
    <script src="/Scripts/jquery.signalR-2.2.1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>

    <script type="text/javascript">
        $(function () {
            // Declare a proxy to reference the hub.
            var notifications = $.connection.messagesHub;

            //debugger;
            // Create a function that the hub can call to broadcast m\essages.
            notifications.client.updateMessages = function () {
                console.log("Got the messages");
                getAllMessages()

            };
            // Start the connection.
            $.connection.hub.start().done(function () {
                alert("connection started")
                getAllMessages();
            }).fail(function (e) {
                alert(e);
            });
        });


        function getAllMessages()
        {
            var tbl = $('#messagesTable');
            $.ajax({
                url: '/data/GetTodaysSalesFigures',
                contentType: 'application/json ; charset:utf-8',
                type: 'GET',
                dataType: 'json'
            }).success(function (result) {
                tbl.empty();
                for (var i = 0; i < result.length; i++) {
                    var site = $("<div/>");
                    site.append("<div class='col-md-6'>" + result[i].SiteId + "</div>")
                    site.append("<div class='col-md-6'>" + result[i].TotalSales + "</div>")
                    tbl.append(site);
                }
            }).error(function () {
            });
        }
    </script>
}
